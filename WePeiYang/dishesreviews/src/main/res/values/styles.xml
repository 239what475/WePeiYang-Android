<resources>

    <!-- Base application theme. -->
    <style name="DishesReviewsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dishColorPrimary</item>
        <item name="colorPrimaryDark">@color/dishColorPrimaryDark</item>
        <item name="colorAccent">@color/dishColorAccent</item>
        <item name="android:textColor">#565656</item>
    </style>
    <style name="DishesRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/dishes_reviews_ratingbar_small_material
        </item>
        <item name="android:indeterminateDrawable">
            @drawable/dishes_reviews_ratingbar_small_material
        </item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="DishesRatingBarSmall" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/dishes_reviews_ratingbar_small_material
        </item>
        <item name="android:indeterminateDrawable">
            @drawable/dishes_reviews_ratingbar_small_material
        </item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>
</resources>
