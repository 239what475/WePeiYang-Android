<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dishesActivityBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_dish"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_info"
        android:layout_width="328dp"
        android:layout_height="64dp"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_dish">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:text="水煮鱼"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:text="竹园餐厅(学四)二层①号窗口"
            android:textSize="12sp" />
    </android.support.v7.widget.CardView>

    <include
        android:id="@+id/layout_score"
        layout="@layout/dishes_reviews_item_evaluate_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/card_info" />

    <include
        android:id="@+id/layout_comment"
        layout="@layout/dishes_reviews_item_evaluate_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/layout_score" />

    <TextView
        android:id="@+id/titile5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="添加图片(未写)"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_comment">

    </TextView>

    <Button
        android:id="@+id/button_submit"
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorPrimary"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titile5" />

</android.support.constraint.ConstraintLayout>