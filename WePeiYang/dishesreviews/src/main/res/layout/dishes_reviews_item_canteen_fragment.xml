<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_left"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        />

    <TextView
        android:id="@+id/tv_titile"
        android:layout_width="0dp"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="近期新品"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/recycler_left" />
    <!--占满右侧-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_titile"
        app:layout_constraintTop_toBottomOf="@id/tv_titile" />
</android.support.constraint.ConstraintLayout>
