<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_height="146dp">

    <com.youth.banner.Banner
        android:id="@+id/banner_ad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.youth.banner.Banner>
    <Button
        android:id="@+id/bt_delicious_comment"
        android:layout_width="44dp"
        android:layout_height="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/dishes_reviews_shape_bt_delicious_comment"
        android:text="@string/text_delicious_index"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_top"
        android:layout_width="69dp"
        android:layout_height="12dp"
        android:gravity="right"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="52dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/tv_dish"
        android:layout_width="69dp"
        android:layout_height="34dp"
        android:gravity="center_horizontal|bottom"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>