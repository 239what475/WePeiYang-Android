<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_search_result"
    android:layout_width="match_parent"
    android:layout_height="109dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    android:layout_marginBottom="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    app:elevation="4dp">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        tools:src="@mipmap/ic_launcher_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:ellipsize="end"
        tools:text="水煮鱼"
        android:textColor="@color/searchItemText1"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/item_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_location"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:lines="1"
        tools:text="竹园餐厅(学四)二层①号窗口"
        android:textColor="@color/searchItemText1"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/item_name"
        app:layout_constraintTop_toBottomOf="@id/item_name" />

    <TextView
        android:id="@+id/item_titile1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:ellipsize="end"
        android:text="综合评分："
        android:textColor="@color/searchItemText1"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/item_location"
        app:layout_constraintTop_toBottomOf="@id/item_location" />

    <TextView
        android:id="@+id/item_titile2"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:text="营业时间："
        android:textColor="@color/searchItemText1"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/item_titile1"
        app:layout_constraintTop_toBottomOf="@id/item_titile1" />

    <TextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:ellipsize="end"
        tools:text="晚餐"
        android:textColor="@color/searchItemText1"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/item_titile2"
        app:layout_constraintTop_toTopOf="@id/item_titile2" />

    <RatingBar
        style="@style/DishesRatingBar"
        android:id="@+id/ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:isIndicator="true"
        android:rating="2"
        app:layout_constraintStart_toEndOf="@id/item_titile1"
        app:layout_constraintTop_toTopOf="@id/item_titile1" />

    <TextView
        android:id="@+id/item_tag"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:background="@drawable/dishes_reviews_textview_border_primary"
        android:ellipsize="end"
        android:gravity="center"
        tools:text="服务好"
        android:textColor="@color/searchItemText2"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/item_time"
        app:layout_constraintTop_toTopOf="@id/item_name" />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_comment"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        app:cardBackgroundColor="@color/dishColorPrimaryAlpha"
        app:cardCornerRadius="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/dishes_revews_ic_action_comment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="点评"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
