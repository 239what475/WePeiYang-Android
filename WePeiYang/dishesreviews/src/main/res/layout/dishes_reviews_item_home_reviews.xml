<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_delicious_comment"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/dishes_reviews_delicious_comment" />
    <TextView
        android:id="@+id/tv_delicious_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/iv_delicious_comment"
        android:textSize="20sp"
        android:text="@string/text_delicious_comment"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_below="@id/iv_delicious_comment"></android.support.v7.widget.RecyclerView>
</RelativeLayout>