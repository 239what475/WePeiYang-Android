<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <include layout="@layout/dishes_reviews_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dishesActivityBackground"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_dish"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="57dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_info"
                android:layout_width="328dp"
                android:layout_height="64dp"
                android:layout_marginTop="100dp"
                app:cardCornerRadius="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_dish">

                <TextView
                    android:id="@+id/tv_dish_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="12dp"
                    tools:text="水煮鱼"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="12dp"
                    tools:text="竹园餐厅(学四)二层①号窗口"
                    android:textSize="12sp" />
            </android.support.v7.widget.CardView>

            <include
                android:id="@+id/layout_score"
                layout="@layout/dishes_reviews_item_evaluate_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@id/card_info" />

            <include
                android:id="@+id/layout_comment"
                layout="@layout/dishes_reviews_item_evaluate_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/layout_score" />

            <TextView
                android:id="@+id/titile5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text="添加图片"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_comment">

            </TextView>

            <ImageView
                android:id="@+id/iv_image1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/dishes_reviews_shape_image_border"
                android:src="@color/imageGrayBackground"
                app:layout_constraintEnd_toStartOf="@+id/iv_image2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titile5" />

            <ImageView
                android:id="@+id/iv_image2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/dishes_reviews_shape_image_border"
                android:src="@color/imageGrayBackground"
                app:layout_constraintEnd_toStartOf="@+id/iv_image3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/iv_image1"
                app:layout_constraintTop_toBottomOf="@id/titile5" />

            <ImageView
                android:id="@+id/iv_image3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"
                android:scaleType="centerInside"
                android:background="@drawable/dishes_reviews_shape_image_border"
                android:src="@drawable/dishes_reviews_ic_add"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/iv_image2"
                app:layout_constraintTop_toBottomOf="@id/titile5" />

            <CheckBox
                android:id="@+id/cb_anonymous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:text="匿名"
                app:layout_constraintTop_toBottomOf="@id/iv_image1"
                app:layout_constraintLeft_toLeftOf="parent" />

            <Button
                android:id="@+id/button_submit"
                android:layout_width="328dp"
                android:layout_height="44dp"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="24dp"
                android:background="@color/dishColorPrimary"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cb_anonymous"
                app:layout_constraintBottom_toBottomOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</merge>