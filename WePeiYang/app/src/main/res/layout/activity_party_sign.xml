<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myWindowBackgroundGray"
    >
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/party_primary_color">

        <include
            android:id="@+id/toolbar"
            layout="@layout/app_toolbar" />

    </android.support.design.widget.AppBarLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:text="结业考试"
        android:textColor="@color/myTextPrimaryColorBlack"
        android:layout_marginLeft="12dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:gravity="center_vertical"
        android:background="@color/myWindowBackgroundWhite"
        >

        <Button
            android:id="@+id/bt_sign_applicant"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/myTextPrimaryColorWhite"
            android:background="@drawable/shape_button_gray"
            android:layout_marginLeft="12dp"
            android:text="报名"/>
        <TextView
            android:id="@+id/tv_sign_applicant"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textColor="@color/myTextPrimaryColorGray"
            android:layout_marginLeft="12dp"
            android:text="当前报名尚未开启"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="院级积极分子党校"
        android:textColor="@color/myTextPrimaryColorBlack"
        android:gravity="center_vertical"
        android:layout_marginLeft="12dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:gravity="center_vertical"
        android:background="@color/myWindowBackgroundWhite">

        <Button
            android:id="@+id/bt_sign_academy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/myTextPrimaryColorWhite"
            android:background="@drawable/shape_button_gray"
            android:layout_marginLeft="12dp"
            android:text="报名"/>
        <TextView
            android:id="@+id/tv_sign_academy"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textColor="@color/myTextPrimaryColorGray"
            android:layout_marginLeft="12dp"
            android:text="当前报名尚未开启"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:text="预备党员党校"
        android:textColor="@color/myTextPrimaryColorBlack"
        android:layout_marginLeft="12dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:gravity="center_vertical"
        android:background="@color/myWindowBackgroundWhite">

        <Button
            android:id="@+id/bt_sign_probationary"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/myTextPrimaryColorWhite"
            android:background="@drawable/shape_button_gray"
            android:layout_marginLeft="12dp"
            android:text="报名"/>
        <TextView
            android:id="@+id/tv_sign_probationary"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textColor="@color/myTextPrimaryColorGray"
            android:layout_marginLeft="12dp"
            android:text="当前报名尚未开启"/>
    </LinearLayout>

