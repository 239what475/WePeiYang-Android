<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_library_launch_avater" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="Login" />

    <EditText
        android:id="@+id/edt_library_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_library_login_edittext"
        android:gravity="center"
        android:hint="Please enter ID"
        android:inputType="number"
        android:padding="8dp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/edt_library_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_library_login_edittext"
        android:gravity="center"
        android:hint="Please enter password"
        android:inputType="text"
        android:padding="8dp"
        android:singleLine="true" />

    <Button
        android:id="@+id/btn_library_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/library_primary_color"
        android:text="Login"
        android:textColor="@android:color/white" />


</LinearLayout>