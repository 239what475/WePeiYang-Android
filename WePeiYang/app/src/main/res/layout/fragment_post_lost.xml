<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/lost_found_tag" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:text="@string/choose_tags"
                        android:textColor="@color/lost_found_primary_color"
                        android:textSize="16sp" />
                </LinearLayout>

                <GridLayout
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:columnCount="4"
                    android:rowCount="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/tag_mobile_phone"
                        android:layout_margin="4dp"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:src="@mipmap/icon_mobile_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="8dp" />

                            <TextView
                                android:text="手机"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/lost_found_primary_color" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/choose_mobile_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|top"
                            android:src="@mipmap/tag_lost_found_choose"
                            android:visibility="gone"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/tag_bank_card"
                        android:layout_margin="4dp"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:src="@mipmap/icon_bank_card"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="银行卡"
                                android:textColor="@color/lost_found_primary_color" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/choose_bank_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|top"
                            android:src="@mipmap/tag_lost_found_choose"
                            android:visibility="gone" />
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/tag_id_card"
                        android:layout_margin="4dp"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:src="@mipmap/icon_id_card"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/lost_found_primary_color"
                                android:text="饭卡或身份证"/>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/choose_id_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|top"
                            android:src="@mipmap/tag_lost_found_choose"
                            android:visibility="gone" />
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/tag_key"
                        android:layout_margin="4dp"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:src="@mipmap/icon_key"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="8dp" />

                            <TextView
                                android:text="钥匙"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/lost_found_primary_color" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/choose_key"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|top"
                            android:src="@mipmap/tag_lost_found_choose"
                            android:visibility="gone" />
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/tag_backpack"
                        android:layout_margin="4dp"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:src="@mipmap/icon_backpack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="8dp" />

                            <TextView
                                android:text="书包"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/lost_found_primary_color" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/choose_backpack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|top"
                            android:src="@mipmap/tag_lost_found_choose"
                            android:visibility="gone" />
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/tag_computer_pag"
                        android:layout_margin="4dp"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:src="@mipmap/icon_computer_pag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="8dp" />

                            <TextView
                                android:text="电脑包"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/lost_found_primary_color" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/choose_computer_pag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|top"
                            android:src="@mipmap/tag_lost_found_choose"
                            android:visibility="gone" />
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/tag_wallet"
                        android:layout_margin="4dp"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:src="@mipmap/icon_wallet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="8dp" />

                            <TextView
                                android:text="钱包"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/lost_found_primary_color" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/choose_wallet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|top"
                            android:src="@mipmap/tag_lost_found_choose"
                            android:visibility="gone" />
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/tag_watch"
                        android:layout_margin="4dp"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:src="@mipmap/icon_watch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="8dp" />

                            <TextView
                                android:text="手表或饰品"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/lost_found_primary_color" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/choose_watch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|top"
                            android:src="@mipmap/tag_lost_found_choose"
                            android:visibility="gone" />
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/tag_udisk"
                        android:layout_margin="4dp"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:src="@mipmap/icon_udisk"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="8dp" />

                            <TextView
                                android:text="U盘或硬盘"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/lost_found_primary_color" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/choose_udisk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|top"
                            android:src="@mipmap/tag_lost_found_choose"
                            android:visibility="gone" />
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/tag_cup"
                        android:layout_margin="4dp"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:src="@mipmap/icon_cup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="8dp" />

                            <TextView
                                android:text="水杯"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/lost_found_primary_color" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/choose_cup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|top"
                            android:src="@mipmap/tag_lost_found_choose"
                            android:visibility="gone" />
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/tag_books"
                        android:layout_margin="4dp"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:src="@mipmap/icon_books"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="8dp" />

                            <TextView
                                android:text="书"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/lost_found_primary_color" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/choose_books"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|top"
                            android:src="@mipmap/tag_lost_found_choose"
                            android:visibility="gone" />
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/tag_others"
                        android:layout_margin="4dp"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:src="@mipmap/icon_others"
                                android:id="@+id/iv_post_lost_found_tag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="8dp" />

                            <ViewSwitcher
                                android:id="@+id/vsc_tag_others"
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="其它"
                                    android:id="@+id/tv_others_tag"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/lost_found_primary_color" />
                                <EditText
                                    android:singleLine="true"
                                    android:id="@+id/et_other_tag"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_post_lost_found_edittext"/>
                            </ViewSwitcher>


                        </LinearLayout>

                        <ImageView
                            android:id="@+id/choose_others"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|top"
                            android:src="@mipmap/tag_lost_found_choose"
                            android:visibility="gone" />
                    </FrameLayout>

                </GridLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/divider_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/tag_lost_found_lost_time" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="丢失时间"
                        android:textColor="@color/lost_found_primary_color"
                        android:textSize="16sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/post_lost_date"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_post_lost_found_date_btn"
                    android:text="选择时间"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/tag_lost_found_lost_position" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="丢失地点"
                        android:textColor="@color/lost_found_primary_color"
                        android:textSize="16sp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/et_lost_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_post_lost_found_edittext" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/tag_lost_found_detail" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="详细描述"
                        android:textColor="@color/lost_found_primary_color"
                        android:textSize="16sp" />


                </LinearLayout>

                <EditText
                    android:id="@+id/et_post_lost_detail"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_post_lost_found_edittext" />

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_post_lost_submit"
                        android:background="@drawable/bg_post_lost_found_submit_btn"
                        android:layout_width="88dp"
                        android:text="发布"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_height="24dp"/>
                    <Button
                        android:id="@+id/btn_post_lost_change"
                        android:background="@drawable/bg_post_lost_found_change_btn"
                        android:layout_marginLeft="80dp"
                        android:layout_width="88dp"
                        android:text="修改"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_height="24dp"/>
                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>
    </ScrollView>

</LinearLayout>