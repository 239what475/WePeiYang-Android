<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/lost_found_tag" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:text="@string/choose_tags"
                            android:textColor="@color/lost_found_primary_color"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:columnCount="4"
                        android:orientation="horizontal"
                        android:rowCount="3">

                        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/tag_mobile_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="8dp"
                                    android:src="@mipmap/icon_mobile_phone" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="手机"
                                    android:textColor="@color/lost_found_primary_color" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/choose_mobile_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|top"
                                android:src="@mipmap/tag_lost_found_choose"
                                android:visibility="gone" />
                        </FrameLayout>

                        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/tag_bank_card"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="8dp"
                                    android:src="@mipmap/icon_bank_card" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="银行卡"
                                    android:textColor="@color/lost_found_primary_color" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/choose_bank_card"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|top"
                                android:src="@mipmap/tag_lost_found_choose"
                                android:visibility="gone" />
                        </FrameLayout>

                        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/tag_id_card"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="8dp"
                                    android:src="@mipmap/icon_id_card" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="饭卡或身份证"
                                    android:textColor="@color/lost_found_primary_color" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/choose_id_card"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|top"
                                android:src="@mipmap/tag_lost_found_choose"
                                android:visibility="gone" />
                        </FrameLayout>

                        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/tag_key"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="8dp"
                                    android:src="@mipmap/icon_key" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="钥匙"
                                    android:textColor="@color/lost_found_primary_color" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/choose_key"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|top"
                                android:src="@mipmap/tag_lost_found_choose"
                                android:visibility="gone" />
                        </FrameLayout>

                        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/tag_backpack"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="8dp"
                                    android:src="@mipmap/icon_backpack" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="书包"
                                    android:textColor="@color/lost_found_primary_color" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/choose_backpack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|top"
                                android:src="@mipmap/tag_lost_found_choose"
                                android:visibility="gone" />
                        </FrameLayout>

                        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/tag_computer_pag"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="8dp"
                                    android:src="@mipmap/icon_computer_pag" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="电脑包"
                                    android:textColor="@color/lost_found_primary_color" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/choose_computer_pag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|top"
                                android:src="@mipmap/tag_lost_found_choose"
                                android:visibility="gone" />
                        </FrameLayout>

                        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/tag_wallet"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="8dp"
                                    android:src="@mipmap/icon_wallet" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="钱包"
                                    android:textColor="@color/lost_found_primary_color" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/choose_wallet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|top"
                                android:src="@mipmap/tag_lost_found_choose"
                                android:visibility="gone" />
                        </FrameLayout>

                        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/tag_watch"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="8dp"
                                    android:src="@mipmap/icon_watch" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="手表或饰品"
                                    android:textColor="@color/lost_found_primary_color" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/choose_watch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|top"
                                android:src="@mipmap/tag_lost_found_choose"
                                android:visibility="gone" />
                        </FrameLayout>

                        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/tag_udisk"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="8dp"
                                    android:src="@mipmap/icon_udisk" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="U盘或硬盘"
                                    android:textColor="@color/lost_found_primary_color" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/choose_udisk"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|top"
                                android:src="@mipmap/tag_lost_found_choose"
                                android:visibility="gone" />
                        </FrameLayout>

                        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/tag_cup"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="8dp"
                                    android:src="@mipmap/icon_cup" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="水杯"
                                    android:textColor="@color/lost_found_primary_color" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/choose_cup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|top"
                                android:src="@mipmap/tag_lost_found_choose"
                                android:visibility="gone" />
                        </FrameLayout>

                        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/tag_books"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="8dp"
                                    android:src="@mipmap/icon_books" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="书"
                                    android:textColor="@color/lost_found_primary_color" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/choose_books"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|top"
                                android:src="@mipmap/tag_lost_found_choose"
                                android:visibility="gone" />
                        </FrameLayout>

                        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/tag_others"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/iv_post_lost_found_tag"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="8dp"
                                    android:src="@mipmap/icon_others" />


                                <TextView
                                    android:id="@+id/tv_others_tag"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="12dp"
                                    android:text="其它"
                                    android:textColor="@color/lost_found_primary_color" />


                            </LinearLayout>

                            <ImageView
                                android:id="@+id/choose_others"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|top"
                                android:src="@mipmap/tag_lost_found_choose"
                                android:visibility="gone" />
                        </FrameLayout>

                    </GridLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/divider_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/tag_lost_found_detail" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="物品名称"
                            android:textColor="@color/lost_found_primary_color"
                            android:textSize="16sp" />


                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_post_lost_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_post_lost_found_edittext"
                        android:singleLine="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/tag_lost_found_lost_time" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="丢失时间"
                            android:textColor="@color/lost_found_primary_color"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_lost_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_post_lost_found_edittext"
                        android:singleLine="true" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/tag_lost_found_lost_position" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="丢失地点"
                            android:textColor="@color/lost_found_primary_color"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_lost_position"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_post_lost_found_edittext"
                        android:singleLine="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/tag_lost_found_detail" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="详细描述"
                            android:textColor="@color/lost_found_primary_color"
                            android:textSize="16sp" />


                    </LinearLayout>

                    <EditText
                        android:singleLine="true"
                        android:id="@+id/et_post_lost_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_post_lost_found_edittext" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_post_lost_submit"
                            android:layout_width="88dp"
                            android:layout_height="24dp"
                            android:background="@drawable/bg_post_lost_found_submit_btn"
                            android:text="发布"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/btn_post_lost_change"
                            android:layout_width="88dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="80dp"
                            android:background="@drawable/bg_post_lost_found_change_btn"
                            android:text="修改"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/pb_post_lost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>


        </android.support.v7.widget.CardView>
    </ScrollView>

</LinearLayout>