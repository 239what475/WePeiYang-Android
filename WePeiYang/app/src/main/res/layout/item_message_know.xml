<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_window"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_mes_read"
        android:id="@+id/message_sure"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/message_allknow"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/message_allknow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全部已读"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/montserrat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/message_sure"
        app:layout_constraintStart_toEndOf="@+id/message_sure"/>
    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_mes_setting"
        android:id="@+id/message_setting_img"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="@id/message_sure"
        app:layout_constraintTop_toBottomOf="@id/message_sure"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/message_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订阅设置"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/montserrat"
        app:layout_constraintStart_toStartOf="@id/message_allknow"
        app:layout_constraintTop_toTopOf="@id/message_setting_img" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>