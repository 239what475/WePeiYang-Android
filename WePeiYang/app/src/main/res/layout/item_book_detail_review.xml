<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="review"
            type="com.twt.service.rxsrc.model.read.Detail.ReviewBean.DataBean"/>
    </data>
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_book_detail_review_avatar"
            app:avatarUrl="@{review.avatar}"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:text="@{review.user_name}"
            android:id="@+id/item_book_detail_review_username"
            android:textSize="18sp"
            android:textColor="@color/myTextPrimaryColorGray"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/item_book_detail_review_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RatingBar
            android:layout_below="@id/item_book_detail_review_username"
            android:layout_toRightOf="@id/item_book_detail_review_avatar"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            style="@style/roomRatingBar"
            android:numStars="5"
            android:isIndicator="true"
            android:rating="@{review.scores}"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="@{review.content}"
            android:id="@+id/item_book_detail_review_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5sp"
            android:textSize="18sp"
            android:layout_below="@id/item_book_detail_review_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/item_book_detail_review_content"
            android:layout_marginTop="2dp"
            android:text="@{review.updated_at}"
            android:textColor="@color/myTextPrimaryColorGray"/>

        <TextView
            android:id="@+id/tv_like"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/item_book_detail_review_content"
            android:text="@{review.like}"
            android:textColor="@color/myTextPrimaryColorGray"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/item_book_detail_iv_like"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@id/item_book_detail_review_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@id/tv_like"
            android:layout_toStartOf="@id/tv_like"
            android:src="@mipmap/ic_book_unlike"/>
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:background="@color/myDivider"/>
    </RelativeLayout>
</layout>