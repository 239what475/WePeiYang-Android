<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rex.wepeiyang">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".WePeiYangApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Welcome Activity -->
        <activity
            android:name=".ui.welcome.WelcomeActivity"
            android:label="@string/title_activity_welcome"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Main Activity -->
        <activity
            android:name=".ui.main.MainActivity"
            android:label="微北洋"
            android:launchMode="singleTask" />
        <!-- Login Activity -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".ui.lostfound.post.PostLostFoundActivity"
            android:label="@string/title_activity_post_lost_found" />
        <activity
            android:name=".ui.news.NewsActivity"
            android:label="@string/title_activity_news" />
        <activity
            android:name=".ui.gpa.GpaActivity"
            android:label="GPA" />
        <activity
            android:name=".ui.notice.NoticeActivity"
            android:label="@string/title_activity_notice"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".ui.news.details.NewsDetailsActivity"
            android:label=""></activity>
        <activity android:name=".ui.news.comments.NewsCommentsActivity"></activity>
    </application>

</manifest>
