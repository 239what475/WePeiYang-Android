<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/main_net</item>

    </style>
    <style name="NetworkEditTextStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/main_net</item>
        <item name="colorControlNormal">@color/widget_word</item>
    </style>
    <style name="Dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="NetworkCheckboxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/network_checkbox_selector</item>

    </style>

</resources>
