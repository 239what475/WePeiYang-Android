<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="128dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <ImageView
            android:id="@+id/waterfall_item_pic"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/waterfall_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/waterfall_item_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/waterfall_item_typePic"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/waterfall_type" />

            <TextView
                android:id="@+id/waterfall_item_typeText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/waterfall_item_typeText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/waterfall_item_timePic"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/waterfall_time" />

            <TextView
                android:id="@+id/waterfall_item_timeText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/waterfall_item_timeText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/waterfall_item_placePic"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/waterfall_place" />

            <TextView
                android:id="@+id/waterfall_item_placeText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/waterfall_item_placeText" />
        </LinearLayout>
</LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>