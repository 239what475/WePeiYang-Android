<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/job_background"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/job_tv_one_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="【北洋园】北京不晓得是啥子的公司天津分公司"
        android:textSize="19sp"
        android:textColor="@color/job_black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/job_iv_one_time"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/job_fragment_time_icon"
        app:layout_constraintTop_toTopOf="@+id/job_tv_one_title"
        app:layout_constraintLeft_toLeftOf="@+id/job_tv_one_title"
        android:layout_marginTop="56dp"/>
    <TextView
        android:id="@+id/job_tv_one_held_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2019-01-12"
        android:textSize="14sp"
        android:textColor="@color/job_dark_grey"
        app:layout_constraintTop_toTopOf="@+id/job_iv_one_time"
        app:layout_constraintBottom_toBottomOf="@+id/job_iv_one_time"
        app:layout_constraintLeft_toRightOf="@+id/job_iv_one_time"/>
    <TextView
        android:id="@+id/job_tv_one_held_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="14:00-16:00"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/job_tv_one_held_date"
        app:layout_constraintBottom_toBottomOf="@+id/job_tv_one_held_date"
        app:layout_constraintTop_toTopOf="@+id/job_tv_one_held_date"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/job_iv_one_place"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/job_fragment_place_icon"
        app:layout_constraintTop_toBottomOf="@+id/job_tv_one_held_date"
        app:layout_constraintLeft_toLeftOf="@+id/job_tv_one_title" />
    <TextView
        android:id="@+id/job_tv_one_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="北洋园校区55教A204"
        android:textSize="14sp"
        android:textColor="@color/job_dark_grey"
        app:layout_constraintTop_toTopOf="@+id/job_iv_one_place"
        app:layout_constraintBottom_toBottomOf="@+id/job_iv_one_place"
        app:layout_constraintLeft_toRightOf="@+id/job_iv_one_place"/>

    <ImageView
        android:id="@+id/job_iv_one_pageviews"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/job_fragment_pageviews_icon"
        app:layout_constraintTop_toBottomOf="@+id/job_tv_one_location"
        app:layout_constraintLeft_toLeftOf="@+id/job_tv_one_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="12dp"/>
    <TextView
        android:id="@+id/job_tv_one_date_pageviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="246"
        android:textSize="14sp"
        android:textColor="@color/job_dark_grey"
        app:layout_constraintTop_toTopOf="@+id/job_iv_one_pageviews"
        app:layout_constraintBottom_toBottomOf="@+id/job_iv_one_pageviews"
        app:layout_constraintLeft_toRightOf="@+id/job_iv_one_pageviews" />

    <TextView
        android:id="@+id/job_tv_one_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2018-09-02"
        android:textColor="@color/job_light_grey"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"/>

    <view
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/job_fragment_dividing_line"
        android:layerType="software"
        app:layout_constraintTop_toTopOf="@+id/job_tv_one_date"
        android:layout_marginTop="8dp" />

</android.support.constraint.ConstraintLayout>