<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/job_home_item_three"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/job_search_tv_info_click"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="14dp"
        android:textColor="@color/job_dark_grey"
        android:textSize="17sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="3088" />

    <ImageView
        android:id="@+id/job_search_iv_info_click"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:src="@drawable/job_click_icon"
        app:layout_constraintBottom_toBottomOf="@+id/job_search_tv_info_click"
        app:layout_constraintRight_toLeftOf="@id/job_search_tv_info_click"
        app:layout_constraintTop_toTopOf="@+id/job_search_tv_info_click" />

    <TextView
        android:id="@+id/job_search_tv_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/job_black"
        android:textSize="19sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/job_search_tv_info_click"
        tools:text="山西省2019年定向天津大学选调优秀搞笑哈哈阿狸我的好辛苦比较权威控件啊波动哈哈嘻嘻嘻你好呀"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/job_search_tv_info_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/job_light_grey"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/job_search_tv_info_click"
        app:layout_constraintTop_toTopOf="@+id/job_search_tv_info_click"
        tools:text="2018-10-27" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/job_fragment_top_frame"
        android:paddingStart="4dp"
        android:paddingTop="2dp"
        android:paddingEnd="4dp"
        android:paddingBottom="2dp"
        android:text="@string/job_info"
        android:textColor="@color/job_green"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/job_search_tv_info_date"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toTopOf="@+id/job_search_tv_info_date"
        app:layout_constraintBottom_toBottomOf="@+id/job_search_tv_info_date"/>

    <View
        android:id="@+id/job_search_v_info_divide"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:background="@drawable/job_dividing_dotted_line"
        android:layerType="software"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
