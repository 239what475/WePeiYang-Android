<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/job_home_item_three"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/job_background">

    <TextView
        android:id="@+id/job_tv_three_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/job_light_grey"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2018-10-27" />

    <ImageView
        android:id="@+id/job_iv_three_top"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="6dp"
        android:src="@drawable/job_search_top_icon"
        app:layout_constraintBottom_toBottomOf="@id/job_tv_three_date"
        app:layout_constraintRight_toLeftOf="@id/job_tv_three_top"
        app:layout_constraintTop_toTopOf="@+id/job_tv_three_date" />

    <TextView
        android:id="@+id/job_tv_three_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/job_top"
        android:textColor="@color/job_dark_grey"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/job_tv_three_date"
        app:layout_constraintRight_toLeftOf="@+id/job_iv_three_click"
        app:layout_constraintTop_toTopOf="@+id/job_tv_three_date" />

    <ImageView
        android:id="@+id/job_iv_three_click"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="6dp"
        android:src="@drawable/job_click_icon"
        app:layout_constraintBottom_toBottomOf="@+id/job_tv_three_date"
        app:layout_constraintRight_toLeftOf="@id/job_tv_three_click"
        app:layout_constraintTop_toTopOf="@+id/job_tv_three_date" />

    <TextView
        android:id="@+id/job_tv_three_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/job_dark_grey"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/job_tv_three_date"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/job_tv_three_date"
        tools:text="3088" />

    <TextView
        android:id="@+id/job_tv_three_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat_regular"
        android:maxLines="3"
        android:textColor="@color/job_black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/job_tv_three_date"
        tools:text="山西省2019年定向天津大学选调优秀搞笑哈哈阿狸我的好辛苦比较权威控件啊波动哈哈嘻嘻嘻你好呀" />


    <View
        android:id="@+id/job_v_three_divide"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:background="@drawable/job_dividing_dotted_line"
        android:layerType="software"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
