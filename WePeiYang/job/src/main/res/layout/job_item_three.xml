<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/job_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/job_tv_three_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/job_dark_grey"
        android:textSize="18sp"
        tools:text="3088"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"/>

    <ImageView
        android:id="@+id/job_iv_three_click"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:src="@drawable/job_fragment_click_icon"
        app:layout_constraintBottom_toBottomOf="@+id/job_tv_three_click"
        app:layout_constraintTop_toTopOf="@+id/job_tv_three_click"
        app:layout_constraintRight_toLeftOf="@id/job_tv_three_click"  />

    <TextView
        android:id="@+id/job_tv_three_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/job_fragment_top_frame"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        tools:text="置顶"
        android:textColor="@color/job_green"
        android:textSize="15sp"
        app:layout_constraintRight_toLeftOf="@+id/job_iv_three_click"
        app:layout_constraintBottom_toBottomOf="@+id/job_iv_three_click"
        app:layout_constraintTop_toTopOf="@+id/job_iv_three_click"/>

    <TextView
        android:id="@+id/job_tv_three_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="山西省2019年定向天津大学选调优秀搞笑哈哈哈哈嘻嘻嘻你好呀"
        android:textColor="@color/job_black"
        android:textSize="19sp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="22dp"
        app:layout_constraintTop_toTopOf="@id/job_tv_three_top"
        android:layout_marginTop="38dp" />

    <TextView
        android:id="@+id/job_tv_three_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2018-10-27"
        android:textSize="15sp"
        android:textColor="@color/job_light_grey"
        app:layout_constraintLeft_toLeftOf="@+id/job_tv_three_title"
        app:layout_constraintTop_toTopOf="@+id/job_tv_three_title"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>

    <View
        android:id="@+id/job_v_three_divide"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_weight="1"
        android:background="@drawable/job_fragment_dividing_line"
        android:layerType="software"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="2dp"/>

</android.support.constraint.ConstraintLayout>