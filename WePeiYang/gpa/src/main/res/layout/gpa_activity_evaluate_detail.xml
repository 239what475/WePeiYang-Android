<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/gpa_evaluate_coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        >

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:elevation="3dp"
                bind:titleTextColor="@color/white_color"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                bind:layout_scrollFlags="scroll|enterAlways"/>
        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:focusable="true"
            bind:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:focusableInTouchMode="true">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1	教学态度"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

            <RatingBar
                android:id="@+id/rb_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="5.0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2	教学内容"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

            <RatingBar
                android:id="@+id/rb_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="5.0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3	教学方法与手段"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

            <RatingBar
                android:id="@+id/rb_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="5.0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4	教学效果"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

            <RatingBar
                android:id="@+id/rb_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="5.0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5	总体评价"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

            <RatingBar
                android:id="@+id/rb_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="5.0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6	意见或建议"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/et_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:gravity="left|top"/>
        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>
</layout>
