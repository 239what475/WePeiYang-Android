<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/tv_type_select_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:text="顺序练习-题型选择"
            android:textColor="@color/examTextBlack"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/v_type_select_single_index"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/exam_shape_type_select_index"
            app:layout_constraintLeft_toLeftOf="@id/tv_type_select_title"
            app:layout_constraintTop_toBottomOf="@id/tv_type_select_title" />

        <TextView
            android:id="@+id/tv_type_select_single_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="单选题"
            android:textColor="@color/examTextBlack"
            app:layout_constraintBottom_toBottomOf="@id/v_type_select_single_index"
            app:layout_constraintLeft_toRightOf="@id/v_type_select_single_index"
            app:layout_constraintTop_toTopOf="@id/v_type_select_single_index" />

        <TextView
            android:id="@+id/tv_type_select_single_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/examTextBlack"
            app:layout_constraintBottom_toBottomOf="@id/v_type_select_single_index"
            app:layout_constraintLeft_toRightOf="@id/tv_type_select_single_title"
            app:layout_constraintTop_toTopOf="@id/v_type_select_single_index"
            tools:text="1/50" />

        <TextView
            android:id="@+id/tv_type_select_single_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="@drawable/exam_shape_blue_tv_with_boundary_small"
            android:textColor="@color/examTextBlue"
            app:layout_constraintBottom_toBottomOf="@id/v_type_select_single_index"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/v_type_select_single_index"
            tools:text="继续练习" />

        <View
            android:id="@+id/v_type_select_divider_one"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:background="@color/examArrowGrey"
            app:layout_constraintTop_toBottomOf="@id/v_type_select_single_index" />

        <View
            android:id="@+id/v_type_select_multi_index"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/exam_shape_type_select_index"
            app:layout_constraintLeft_toLeftOf="@id/tv_type_select_title"
            app:layout_constraintTop_toBottomOf="@id/v_type_select_divider_one" />

        <TextView
            android:id="@+id/tv_type_select_multi_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="多选题"
            android:textColor="@color/examTextBlack"
            app:layout_constraintBottom_toBottomOf="@id/v_type_select_multi_index"
            app:layout_constraintLeft_toRightOf="@id/v_type_select_multi_index"
            app:layout_constraintTop_toTopOf="@id/v_type_select_multi_index" />

        <TextView
            android:id="@+id/tv_type_select_multi_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/examTextBlack"
            app:layout_constraintBottom_toBottomOf="@id/v_type_select_multi_index"
            app:layout_constraintLeft_toRightOf="@id/tv_type_select_multi_title"
            app:layout_constraintTop_toTopOf="@id/v_type_select_multi_index"
            tools:text="0/50" />

        <TextView
            android:id="@+id/tv_type_select_multi_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="@drawable/exam_shape_blue_tv_with_boundary_small"
            android:textColor="@color/examTextBlue"
            app:layout_constraintBottom_toBottomOf="@id/v_type_select_multi_index"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/v_type_select_multi_index"
            tools:text="开始练习" />

        <View
            android:id="@+id/v_type_select_divider_two"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:background="@color/examArrowGrey"
            app:layout_constraintTop_toBottomOf="@id/v_type_select_multi_index" />

        <View
            android:id="@+id/v_type_select_tf_index"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/exam_shape_type_select_index"
            app:layout_constraintLeft_toLeftOf="@id/tv_type_select_title"
            app:layout_constraintTop_toBottomOf="@id/v_type_select_divider_two" />

        <TextView
            android:id="@+id/tv_type_select_tf_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="判断题"
            android:textColor="@color/examTextBlack"
            app:layout_constraintBottom_toBottomOf="@id/v_type_select_tf_index"
            app:layout_constraintLeft_toRightOf="@id/v_type_select_tf_index"
            app:layout_constraintTop_toTopOf="@id/v_type_select_tf_index" />

        <TextView
            android:id="@+id/tv_type_select_tf_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/examTextBlack"
            app:layout_constraintBottom_toBottomOf="@id/v_type_select_tf_index"
            app:layout_constraintLeft_toRightOf="@id/tv_type_select_tf_title"
            app:layout_constraintTop_toTopOf="@id/v_type_select_tf_index"
            tools:text="1/50" />

        <TextView
            android:id="@+id/tv_type_select_tf_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="@drawable/exam_shape_blue_tv_with_boundary_small"
            android:textColor="@color/examTextBlue"
            app:layout_constraintBottom_toBottomOf="@id/v_type_select_tf_index"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/v_type_select_tf_index"
            tools:text="继续练习" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
