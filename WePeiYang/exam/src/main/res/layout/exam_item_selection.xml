<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="20dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/tv_selection_index"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/exam_shape_selection_index"
        android:fontFamily="@font/montserrat_light"
        android:gravity="center"
        android:text="A"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_selection_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/examTextBlack"
        android:textSize="16sp"
        tools:text="@string/appbar_scrolling_view_behavior" />
</LinearLayout>
