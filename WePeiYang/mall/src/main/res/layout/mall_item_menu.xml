<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="6dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="168dp"
        android:layout_height="wrap_content">

        <ExpandableListView
            android:id="@+id/elv_menu"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv_menu_sale"
            android:layout_centerHorizontal="true"
            android:background="#FFFFFF"
            android:cacheColorHint="@color/mallColorTextLight"
            android:childDivider="@color/mallColorBgLight"
            android:divider="@color/mallColorBgGrey"
            android:dividerHeight="4dp"
            tools:layout_height="600dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/cv_menu_sale"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/tv_menu_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:text="商品"
                android:textColor="@color/mallColorMain"
                android:textSize="15sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cv_menu_need"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/tv_menu_need"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:text="求购"
                android:textColor="@color/mallColorTextLight"
                android:textSize="15sp" />

        </android.support.v7.widget.CardView>

    </RelativeLayout>
</android.support.v7.widget.CardView>