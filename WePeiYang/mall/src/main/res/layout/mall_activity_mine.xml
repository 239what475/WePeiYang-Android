<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mallColorBgGrey"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/abl_mine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mallColorMain"
        android:orientation="vertical">

        <include layout="@layout/mall_item_toolbar" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_mine_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:text="手机"
                android:textColor="@color/mallColorTextLight"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/tv_mine_q"
                app:layout_constraintLeft_toRightOf="@id/cv_mine_avatar"
                app:layout_constraintTop_toTopOf="@id/cv_mine_avatar" />

            <TextView
                android:id="@+id/tv_mine_q"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="QQ "
                android:textColor="@color/mallColorTextLight"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/tv_mine_e"
                app:layout_constraintLeft_toRightOf="@id/cv_mine_avatar"
                app:layout_constraintTop_toBottomOf="@id/tv_mine_p" />

            <TextView
                android:id="@+id/tv_mine_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="微信"
                android:textColor="@color/mallColorTextLight"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/tv_mine_c"
                app:layout_constraintLeft_toRightOf="@id/cv_mine_avatar"
                app:layout_constraintTop_toBottomOf="@id/tv_mine_q" />

            <TextView
                android:id="@+id/tv_mine_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="25dp"
                android:text="校区"
                android:textColor="@color/mallColorTextLight"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_mine_name"
                app:layout_constraintLeft_toRightOf="@id/cv_mine_avatar"
                app:layout_constraintTop_toBottomOf="@id/tv_mine_e" />

            <TextView
                android:id="@+id/tv_mine_campus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textColor="@color/mallColorTextLight"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_mine_c"
                app:layout_constraintLeft_toRightOf="@id/tv_mine_c"
                app:layout_constraintTop_toTopOf="@id/tv_mine_c"
                tools:text="北洋园" />

            <TextView
                android:id="@+id/tv_mine_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/mallColorTextLight"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_mine_p"
                app:layout_constraintLeft_toRightOf="@id/tv_mine_p"
                app:layout_constraintTop_toTopOf="@id/tv_mine_p"
                tools:text="12345678912" />

            <TextView
                android:id="@+id/tv_mine_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/mallColorTextLight"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_mine_q"
                app:layout_constraintLeft_toRightOf="@id/tv_mine_q"
                app:layout_constraintTop_toTopOf="@id/tv_mine_q"
                tools:text="123456789" />

            <TextView
                android:id="@+id/tv_mine_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/mallColorTextLight"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_mine_e"
                app:layout_constraintLeft_toRightOf="@id/tv_mine_e"
                app:layout_constraintTop_toTopOf="@id/tv_mine_e"
                tools:text="12345678912@163.com" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="60dp"
                android:text="天外天工作室"
                android:textColor="@color/mallColorPressed"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_mine_setting" />

            <TextView
                android:id="@+id/tv_mine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/mallColorTextLight"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@id/cv_mine_avatar"
                app:layout_constraintStart_toStartOf="@id/cv_mine_avatar"
                app:layout_constraintTop_toBottomOf="@id/cv_mine_avatar"
                tools:text="Ava_XI" />

            <android.support.v7.widget.CardView
                android:id="@+id/cv_mine_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_mine_avatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mall_ic_mine" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_mine_fav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:background="?android:selectableItemBackground"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/cv_mine_need">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <ImageView
                        android:id="@+id/iv_mine_fav"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/mall_ic_fav" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/mall_ic_arrow" />

                    <TextView
                        android:id="@+id/tv_mine_fav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:layout_toEndOf="@id/iv_mine_fav"
                        android:text="@string/mallStringMyFav"
                        android:textSize="16sp"
                        app:layout_constraintLeft_toRightOf="@+id/iv_mine_fav"
                        app:layout_constraintTop_toTopOf="parent" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_mine_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:background="?android:selectableItemBackground"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/cv_mine_post_need">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <ImageView
                        android:id="@+id/iv_mine_setting"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/mall_ic_setting" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/mall_ic_arrow" />

                    <TextView
                        android:id="@+id/tv_mine_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:layout_toEndOf="@id/iv_mine_setting"
                        android:text="设置"
                        android:textSize="16sp"
                        app:layout_constraintLeft_toRightOf="@+id/iv_mine_setting"
                        app:layout_constraintTop_toTopOf="parent" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_mine_sale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="20dp"
                android:background="?android:selectableItemBackground"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv_mine_name">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <ImageView
                        android:id="@+id/iv_mine_sale"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/mall_ic_sale" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/mall_ic_arrow" />

                    <TextView
                        android:id="@+id/tv_mine_sale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:layout_toEndOf="@id/iv_mine_sale"
                        android:text="@string/mallStringMySale"
                        android:textSize="16sp"
                        app:layout_constraintLeft_toRightOf="@+id/iv_mine_sale"
                        app:layout_constraintTop_toTopOf="parent" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_mine_post_sale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:background="?android:selectableItemBackground"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/cv_mine_fav">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <ImageView
                        android:id="@+id/iv_mine_post_sale"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/mall_ic_sale" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/mall_ic_arrow" />

                    <TextView
                        android:id="@+id/tv_mine_post_sale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:layout_toEndOf="@id/iv_mine_post_sale"
                        android:text="@string/mallStringPostSale"
                        android:textSize="16sp"
                        app:layout_constraintLeft_toRightOf="@+id/iv_mine_post_sale"
                        app:layout_constraintTop_toTopOf="parent" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_mine_post_need"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:background="?android:selectableItemBackground"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/cv_mine_post_sale">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <ImageView
                        android:id="@+id/iv_mine_post_need"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/mall_ic_sale" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/mall_ic_arrow" />

                    <TextView
                        android:id="@+id/tv_mine_post_need"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:layout_toEndOf="@id/iv_mine_post_need"
                        android:text="@string/mallStringPostNeed"
                        android:textSize="16sp"
                        app:layout_constraintLeft_toRightOf="@+id/iv_mine_post_need"
                        app:layout_constraintTop_toTopOf="parent" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_mine_need"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:background="?android:selectableItemBackground"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/cv_mine_sale">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <ImageView
                        android:id="@+id/iv_mine_need"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/mall_ic_need" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/mall_ic_arrow" />

                    <TextView
                        android:id="@+id/tv_mine_need"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:layout_toEndOf="@id/iv_mine_need"
                        android:text="@string/mallStringMyNeed"
                        android:textSize="16sp"
                        app:layout_constraintLeft_toRightOf="@+id/iv_mine_need"
                        app:layout_constraintTop_toTopOf="parent" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
