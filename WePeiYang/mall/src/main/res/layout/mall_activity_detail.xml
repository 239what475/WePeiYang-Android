<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail.DetailActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mallColorMain">
        <include layout="@layout/mall_item_toolbar" />
    </android.support.design.widget.AppBarLayout>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_mall_detail_goods"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_height="300dp" />
        <TextView
            android:id="@+id/tv_p"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_mall_detail_goods"
            android:text="¥"
            android:textSize="16sp"
            android:paddingTop="25dp"
            android:paddingLeft="45dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_detail_price"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:paddingTop="25dp"
            android:paddingLeft="5dp"
            android:text="10000.00"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/tv_p"
            app:layout_constraintTop_toBottomOf="@id/iv_mall_detail_goods" />

        <TextView
            android:id="@+id/tv_detail_name"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:paddingTop="8dp"
            android:paddingLeft="30dp"
            android:paddingBottom="5dp"
            android:text="暂无命名"
            app:layout_constraintLeft_toRightOf="@id/tv_detail_price"
            app:layout_constraintTop_toBottomOf="@id/iv_mall_detail_goods" />
        <ImageView
            android:layout_width="20dp"
            android:id="@+id/time_iv"
            android:layout_marginTop="15dp"
            android:background="@drawable/time"
            app:layout_constraintLeft_toRightOf="@id/tv_detail_price"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_name"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/time"
            app:layout_constraintLeft_toRightOf="@id/time_iv"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_name"
            android:layout_marginTop="15dp"
            android:layout_width="135dp"
            android:text="2019-06-29 21:30:15"
            android:layout_height="20dp" />
        <ImageView
            app:layout_constraintTop_toBottomOf="@id/tv_detail_name"
            app:layout_constraintLeft_toRightOf="@id/time"
            android:id="@+id/locate_iv"
            android:layout_marginTop="15dp"
            android:background="@drawable/locate"
            android:layout_marginLeft="10dp"
            android:layout_width="20dp"
            android:layout_height="18dp" />

        <TextView
            android:id="@+id/tv_detail_locate"
            android:layout_width="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:text="北洋园"
            android:paddingLeft="5dp"

            app:layout_constraintTop_toBottomOf="@id/tv_detail_name"
            app:layout_constraintLeft_toRightOf="@id/locate_iv"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView
            android:id="@+id/cv_goods_detail"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="15dp"
            android:elevation="10dp"
            app:cardMaxElevation="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail_price"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_goods_detail"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_detail_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="10dp"
                    android:id="@+id/more_one"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/more"
                    android:layout_marginLeft="100dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <ImageView
                    android:id="@+id/more_two"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/more_one"
                    android:background="@drawable/more_two"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:layout_marginLeft="6dp"
                    android:id="@+id/tv_goods"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/more_two"
                    android:text="商品详情"
                    android:textColor="#FF7F24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/more_three"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_goods"
                    android:background="@drawable/more_two"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <ImageView
                    android:id="@+id/more_four"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/more_three"
                    android:background="@drawable/more"
                    android:layout_marginLeft="4dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/deteail_goods_tv"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/more_three"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="20dp"
                    android:text="该用户还未填写任何信息，哭哭，您自己问他吧"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_height="match_parent" />



            </android.support.constraint.ConstraintLayout>



        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_two"
            app:layout_constraintTop_toBottomOf="@id/cv_goods_detail"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="15dp"
            android:elevation="10dp"
            app:cardMaxElevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/exchange_bt_locate_one"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="#6495ED"
                    android:layout_width="70dp"
                    android:layout_height="30dp" />
                <Button
                    android:id="@+id/exchange_locate_two"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="#00BFFF"
                    android:text="交易地点"
                    android:paddingTop="5dp"
                    android:textColor="#ffffff"
                    android:layout_width="68dp"
                    android:layout_height="30dp" />
                <TextView
                    android:id="@+id/exchange_locate_text"
                    app:layout_constraintLeft_toRightOf="@id/exchange_locate_two"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="卖家暂未说明"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="45dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <Button
                    android:id="@+id/goods_quality_one"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/exchange_bt_locate_one"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="#6495ED"
                    android:layout_width="70dp"
                    android:layout_height="30dp" />
                <Button
                    android:id="@+id/goods_quality_two"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/exchange_locate_two"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="#00BFFF"
                    android:text="商品成色"
                    android:paddingTop="5dp"
                    android:textColor="#ffffff"
                    android:layout_width="68dp"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/seller_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="20dp"
                    android:text="卖家暂未说明"
                    app:layout_constraintLeft_toRightOf="@id/goods_quality_two"
                    app:layout_constraintTop_toBottomOf="@id/exchange_locate_text" />

                <Button
                    android:id="@+id/barter_one"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/goods_quality_one"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="#6495ED"
                    android:layout_width="70dp"
                    android:layout_height="30dp" />
                <Button
                    android:id="@+id/barter_two"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/goods_quality_two"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="#00BFFF"
                    android:text="物物交换"
                    android:paddingTop="5dp"
                    android:textColor="#ffffff"
                    android:layout_width="68dp"
                    android:layout_height="30dp" />
                <TextView
                    android:id="@+id/barter_tv"
                    app:layout_constraintLeft_toRightOf="@id/barter_two"
                    app:layout_constraintTop_toBottomOf="@id/goods_quality_two"
                    android:text="卖家暂未说明"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="45dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/dicker_one"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="17dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/barter_one"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="#6495ED"
                    android:layout_width="70dp"
                    android:layout_height="30dp" />
                <Button
                    android:id="@+id/dicker_two"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/barter_two"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="#00BFFF"
                    android:text="是否可刀"
                    android:paddingTop="5dp"
                    android:textColor="#ffffff"
                    android:layout_width="68dp"
                    android:layout_height="30dp" />
                <TextView
                    android:id="@+id/dicker_tv"
                    app:layout_constraintLeft_toRightOf="@id/dicker_two"
                    app:layout_constraintTop_toBottomOf="@id/barter_tv"
                    android:text="卖家暂未说明"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="45dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />




            </android.support.constraint.ConstraintLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_three"
            app:layout_constraintTop_toBottomOf="@id/cv_two"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="15dp"
            android:elevation="10dp"
            app:cardMaxElevation="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/seller_image"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/seller_image_detail"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <TextView
                    android:id="@+id/seller_name"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="70dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="20dp"
                    android:text="uzumaki naruto"
                    app:layout_constraintTop_toBottomOf="@+id/seller_image"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/phone_one"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="17dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/seller_image"
                    android:background="#6495ED"
                    android:layout_width="70dp"
                    android:layout_height="20dp" />
                <Button
                    android:id="@+id/phone_two"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/seller_image"
                    android:background="#00BFFF"
                    android:text="手机"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:layout_width="68dp"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/phone_tv"
                    app:layout_constraintLeft_toRightOf="@id/phone_two"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="卖家暂未说明"
                    android:textSize="12sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



                <Button
                    android:id="@+id/qq_one"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="17dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/phone_one"
                    app:layout_constraintLeft_toRightOf="@id/seller_image"
                    android:background="#6495ED"
                    android:layout_width="70dp"
                    android:layout_height="20dp" />
                <Button
                    android:id="@+id/qq_two"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/phone_two"
                    app:layout_constraintLeft_toRightOf="@id/seller_image"
                    android:background="#00BFFF"
                    android:text="QQ"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:layout_width="68dp"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/qq_tv"
                    app:layout_constraintLeft_toRightOf="@id/phone_two"
                    app:layout_constraintTop_toBottomOf="@id/phone_tv"
                    android:text="卖家暂未说明"
                    android:textSize="12sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/wechat_one"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="17dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/qq_one"
                    app:layout_constraintLeft_toRightOf="@id/seller_image"
                    android:background="#6495ED"
                    android:layout_width="70dp"
                    android:layout_height="20dp" />
                <Button
                    android:id="@+id/wechat_two"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/qq_two"
                    app:layout_constraintLeft_toRightOf="@id/seller_image"
                    android:background="#00BFFF"
                    android:text="微信"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:layout_width="68dp"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/wechat_three"
                    app:layout_constraintLeft_toRightOf="@id/wechat_two"
                    app:layout_constraintTop_toBottomOf="@id/qq_tv"
                    android:text="卖家暂未说明"
                    android:textSize="12sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    app:layout_constraintTop_toBottomOf="@id/wechat_three"
                    app:layout_constraintRight_toLeftOf="@+id/goods_collect"
                    android:layout_marginTop="30dp"
                    android:textSize="10sp"
                    android:text="「联系我时，请说明是在天外天商城看到我的哟」"
                    android:layout_marginRight="25dp"
                    android:textColor="#00BFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:id="@+id/goods_collect"
                    android:layout_marginTop="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="45dp"
                    app:layout_constraintTop_toBottomOf="@id/wechat_three"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="@drawable/detail_collect"
                    android:layout_width="25dp"
                    android:layout_height="27dp" />

                <ImageView
                    android:id="@+id/goods_comment"
                    android:layout_marginTop="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toBottomOf="@id/wechat_three"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="@drawable/detail_comment"
                    android:layout_width="23dp"
                    android:layout_height="23dp" />



            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>






    </android.support.constraint.ConstraintLayout>


</android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
