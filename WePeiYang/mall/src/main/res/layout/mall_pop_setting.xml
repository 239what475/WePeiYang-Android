<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="修改信息"
        android:textStyle="bold"
        android:textColor="@color/mallColorMain"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="#FFFFFF"
        android:text="手机" />

    <EditText
        android:id="@+id/et_setting_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="14sp"
        android:inputType="phone"
        android:textColor="#FFFFFF"
        android:theme="@style/EditTextStyle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="#FFFFFF"
        android:text="QQ"/>


    <EditText
        android:id="@+id/et_setting_qq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="14sp"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:theme="@style/EditTextStyle" />

    <TextView
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="微信" />

    <EditText
        android:id="@+id/et_setting_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="14sp"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:theme="@style/EditTextStyle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="校区"/>

    <RadioGroup
        android:id="@+id/rg_setting_campus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_setting_campus1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="卫津路校区"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:theme="@style/EditTextStyle" />

        <RadioButton
            android:id="@+id/rb_setting_campus2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北洋园校区"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:theme="@style/EditTextStyle" />
    </RadioGroup>

    <android.support.v7.widget.CardView
        app:cardElevation="0dp"
        android:id="@+id/bt_setting_commit"
        app:cardCornerRadius="18dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:clickable="true"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/mallColorPressed"
        android:layout_height="35dp"
        android:focusable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="确认修改"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardElevation="0dp"
        android:id="@+id/bt_setting_cancel"
        app:cardCornerRadius="18dp"
        android:layout_margin="18dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:clickable="true"
        app:cardBackgroundColor="@color/mallColorLight"
        android:layout_height="35dp"
        android:focusable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="取消"/>
    </android.support.v7.widget.CardView>

</LinearLayout>