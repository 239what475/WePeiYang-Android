<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="edit_AlertDialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowActionBar">false</item>
        <!-- 是否启用标题栏 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 是否使用背景半透明 -->
    </style>
    <style name="SpinnerStyle">
        <item name="colorControlNormal">@color/mallColorBgLight</item>
        <item name="colorControlActivated">@color/mallColorLight</item>
    </style>
    <style name="EditTextStyle">
        <item name="colorControlNormal">@color/mallColorLight</item>
        <item name="colorControlActivated">@color/mallColorMain</item>
    </style>
    <style name="AlertDialogStyle" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/mallColorMain</item>
        <item name="android:textSize">14sp</item>
        <item name="android:buttonBarPositiveButtonStyle">@color/mallColorMain</item>
    </style>

</resources>