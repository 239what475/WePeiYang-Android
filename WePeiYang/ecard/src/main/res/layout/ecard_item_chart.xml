<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="65dp">

    <com.twt.service.ecard.view.EcardChartView
        android:id="@+id/ecv_chart"
        android:layout_width="0dp"
        android:layout_height="342dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintLeft_toRightOf="@id/tv_chart_month"
        app:layout_constraintRight_toLeftOf="@id/tv_chart_date"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_chart_month"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/ecardTextColor18"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/ecv_chart"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="4月" />

    <TextView
        android:id="@+id/tv_chart_date"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="日期"
        android:textColor="@color/ecardTextColor18"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/ecv_chart"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
