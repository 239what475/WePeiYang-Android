<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/v_else_sign"
        android:layout_width="5dp"
        android:layout_height="18dp"
        android:background="@color/ecardThemeColor"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_else_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/ecardTextColor9"
        android:textSize="13sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/v_else_sign"
        app:layout_constraintLeft_toRightOf="@id/v_else_sign"
        app:layout_constraintTop_toTopOf="@id/v_else_sign"
        tools:text="今日流水" />

    <ImageView
        android:id="@+id/iv_else_more"
        android:layout_width="5dp"
        android:layout_height="6dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/ecard_banlance_right"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_else_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ecardTextColor4"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/iv_else_more"
        app:layout_constraintRight_toLeftOf="@id/iv_else_more"
        app:layout_constraintTop_toTopOf="@id/iv_else_more"
        tools:text="更多流水" />

    <TextView
        android:id="@+id/tv_else_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/ecardTextColor7"
        android:textSize="10sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="3条记录被折叠" />

    <TextView
        android:id="@+id/tv_else_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/ecardTextColor8"
        android:textSize="10sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/tv_else_tip"
        app:layout_constraintLeft_toRightOf="@id/tv_else_tip"
        app:layout_constraintTop_toTopOf="@id/tv_else_tip"
        tools:text="点击显示" />

    <TextView
        android:id="@+id/tv_else_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ecardTextColor8"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="补办校园卡流程说明" />

    <View
        android:id="@+id/v_else_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/ecardTextColor8"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@id/tv_else_content"
        app:layout_constraintRight_toRightOf="@id/tv_else_content"
        app:layout_constraintTop_toBottomOf="@id/tv_else_content" />

    <TextView
        android:id="@+id/tv_else_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_light"
        android:textColor="@color/ecardTextColor3"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/v_else_sign"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="01/01" />
</android.support.constraint.ConstraintLayout>