<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="346dp"
    android:layout_height="100dp"
    android:layout_marginStart="17dp"
    android:layout_marginBottom="12dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/search_img"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_marginStart="9dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/search_name"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_regular"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="15dp"
            app:layout_constraintLeft_toRightOf="@+id/search_img"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="创业，向最优秀的人学习：70位世界顶级企业家的创业智慧" />

        <TextView
            android:id="@+id/search_borrowing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:text="借阅数"
            android:textColor="#666666"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/search_name"
            app:layout_constraintLeft_toRightOf="@+id/search_img"
            app:layout_constraintTop_toBottomOf="@+id/search_name" />

        <TextView
            android:id="@+id/search_press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="出版社"
            android:textColor="#666666"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/search_borrowing"
            app:layout_constraintTop_toBottomOf="@+id/search_borrowing" />

        <TextView
            android:id="@+id/borrow_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/search_borrowing"
            app:layout_constraintTop_toTopOf="@+id/search_borrowing" />

        <TextView
            android:id="@+id/publish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/borrow_num"
            app:layout_constraintLeft_toRightOf="@+id/search_press"
            app:layout_constraintTop_toTopOf="@+id/search_press" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>