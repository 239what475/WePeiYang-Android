<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    app:cardUseCompatPadding="true"
    android:orientation="vertical"
    app:cardPreventCornerOverlap="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:id="@+id/statistics_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:textSize="36dp"
            android:text="4"
            android:background="@color/white"
            android:id="@+id/rank_num"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:id="@+id/sta_name"
            android:text="新垣结衣"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="@+id/statistics_img"
            app:layout_constraintLeft_toRightOf="@+id/statistics_img"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="借阅数"
            android:id="@+id/jieyue"
            app:layout_constraintLeft_toLeftOf="@+id/sta_name"
            app:layout_constraintTop_toBottomOf="@+id/sta_name"
            android:layout_marginTop="22dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="出版社"
            android:id="@+id/chuban"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@+id/jieyue"
            app:layout_constraintLeft_toLeftOf="@+id/jieyue"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:id="@+id/borrow_num"
            app:layout_constraintTop_toTopOf="@+id/jieyue"
            app:layout_constraintLeft_toRightOf="@+id/jieyue"
            android:layout_marginLeft="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:id="@+id/publish_name"
            app:layout_constraintTop_toTopOf="@+id/chuban"
            app:layout_constraintLeft_toRightOf="@+id/chuban"
            android:layout_marginLeft="6dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/borrowing"
            android:id="@+id/isborrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>




    </android.support.constraint.ConstraintLayout>
    

</android.support.v7.widget.CardView>