<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="327dp"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/book_pic"
            android:layout_width="103dp"
            android:layout_height="103dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/book"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/book_name"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="18dp"
            android:singleLine="false"
            android:text="创业，向最优秀的人学习：70位世界顶级企业家的创业智慧"
            android:textColor="#333333"
            android:textSize="13dp"
            app:layout_constraintLeft_toRightOf="@+id/book_pic"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/book_author_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="作者"
            android:textColor="#999999"
            android:textSize="10dp"
            app:layout_constraintLeft_toRightOf="@+id/book_pic"
            app:layout_constraintTop_toBottomOf="@+id/book_name" />

        <TextView
            android:id="@+id/book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="(美)约瑟夫·波耶特，吉米·波耶特"
            android:textColor="#999999"
            android:textSize="10dp"
            app:layout_constraintLeft_toRightOf="@+id/book_author_mark"
            app:layout_constraintTop_toBottomOf="@+id/book_name"
            app:layout_constraintTop_toTopOf="@+id/book_author_mark" />

        <TextView
            android:id="@+id/book_publisher_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="出版社"
            android:textColor="#999999"
            android:textSize="10dp"
            app:layout_constraintLeft_toRightOf="@+id/book_pic"
            app:layout_constraintTop_toBottomOf="@+id/book_author" />

        <TextView
            android:id="@+id/book_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="新华出版社"
            android:textColor="#999999"
            android:textSize="10dp"
            app:layout_constraintLeft_toRightOf="@+id/book_publisher_mark"
            app:layout_constraintTop_toTopOf="@+id/book_publisher_mark" />

        <TextView
            android:id="@+id/book_publish_date_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="出版日期"
            android:textColor="#999999"
            android:textSize="10dp"
            app:layout_constraintLeft_toRightOf="@+id/book_pic"
            app:layout_constraintTop_toBottomOf="@+id/book_publisher" />

        <TextView
            android:id="@+id/book_publish_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="2002"
            android:textColor="#999999"
            android:textSize="10dp"
            app:layout_constraintLeft_toRightOf="@+id/book_publish_date_mark"
            app:layout_constraintTop_toTopOf="@+id/book_publish_date_mark" />

        <TextView
            android:id="@+id/book_content_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:text="内容简介"
            android:textColor="#999999"
            android:textSize="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/book_publish_date_mark" />

        <TextView
            android:id="@+id/book_content"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="8dp"
            android:text="你是傻子你是傻子你是傻子你是傻子你是傻子你是傻子你是傻子你是傻子你是傻子"
            android:textColor="#999999"
            android:textSize="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/book_content_mark" />

        <TextView
            android:id="@+id/book_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="22dp"
            android:text="馆藏情况"
            android:textColor="#999999"
            android:textSize="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/book_content" />

        <TextView
            android:id="@+id/book_demand_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="12dp"
            android:text="索书号"
            android:textColor="#999999"
            android:textSize="12dp"
            app:layout_constraintLeft_toLeftOf="@+id/book_condition"
            app:layout_constraintTop_toBottomOf="@+id/book_condition" />

        <TextView
            android:id="@+id/book_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="83dp"
            android:text="馆藏地点"
            android:textColor="#999999"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/book_demand_number"
            app:layout_constraintLeft_toRightOf="@id/book_demand_number"
            app:layout_constraintTop_toTopOf="@+id/book_demand_number" />

        <TextView
            android:id="@+id/book_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="状态"
            android:textColor="#999999"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@id/book_demand_number"
            app:layout_constraintLeft_toRightOf="@id/book_position"
            app:layout_constraintTop_toTopOf="@id/book_demand_number" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/book_demand_number"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>