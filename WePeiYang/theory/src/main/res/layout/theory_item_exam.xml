<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="42dp"
        android:layout_height="22dp"
        android:background="@drawable/status_circle_shape"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:text="必考"
        android:textColor="#1E90FF"
        android:gravity="center"
        android:id="@+id/exam_necessary"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eaxm_name"
        android:text="考试时间"
        android:textColor="#1E90FF"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/exam_necessary"
        app:layout_constraintTop_toTopOf="@+id/exam_necessary"
        app:layout_constraintBottom_toBottomOf="@+id/exam_necessary"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="60dp"
        android:layout_height="22dp"
        android:background="@drawable/status_circle_shape"
        app:layout_constraintTop_toTopOf="@id/eaxm_detail"
        app:layout_constraintBottom_toBottomOf="@+id/eaxm_detail"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:text="正在进行"
        android:textColor="#1E90FF"
        android:textSize="12dp"
        android:gravity="center"
        android:id="@+id/exam_status"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eaxm_detail"
        android:textSize="20sp"
        android:text="2019.4.20"
        app:layout_constraintLeft_toRightOf="@+id/exam_status"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/eaxm_name"
        android:layout_marginTop="12dp"
        />
</android.support.constraint.ConstraintLayout>