<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AnswerActivity">

    <include
        android:id="@+id/theory_user_actionbar"
        layout="@layout/theory_common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_blue_A700"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="5dp"
        android:padding="2dp"
        app:cardCornerRadius="3dp"
        app:layout_constraintTop_toBottomOf="@id/theory_user_actionbar">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="20dp">

        </android.support.v7.widget.RecyclerView>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>