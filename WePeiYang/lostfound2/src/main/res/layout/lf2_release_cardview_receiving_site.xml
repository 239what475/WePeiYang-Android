<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_receiving_site_garden_spinner_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="1dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/v_waterfall_line1">

        <Spinner
            android:id="@+id/sp_receiving_site_garden"
            android:layout_width="92dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:dropDownWidth="92dp"
            android:theme="@style/SpinnerStyle" />
    </android.support.v7.widget.CardView>

    <View
        android:id="@+id/v_waterfall_line1"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#dfdfdf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cv_receiving_site_garden_spinner_card"
        app:layout_constraintRight_toLeftOf="@id/cv_receiving_site_room_spinner_card"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_receiving_site_room_spinner_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="1dp"
        app:layout_constraintLeft_toRightOf="@id/v_waterfall_line1"
        app:layout_constraintRight_toLeftOf="@id/v_waterfall_line2">

        <Spinner
            android:id="@+id/sp_receiving_site_room"
            android:layout_width="92dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:dropDownWidth="92dp"
            android:theme="@style/SpinnerStyle" />
    </android.support.v7.widget.CardView>

    <View
        android:id="@+id/v_waterfall_line2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#dfdfdf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/cv_receiving_site_room_spinner_card"
        app:layout_constraintRight_toLeftOf="@+id/cv_receiving_site_entrance_spinner"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_receiving_site_entrance_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="1dp"
        app:layout_constraintLeft_toRightOf="@+id/v_waterfall_line2"
        app:layout_constraintRight_toRightOf="parent">

        <Spinner
            android:id="@+id/sp_receiving_site_entrance"
            android:layout_width="92dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:dropDownWidth="92dp"
            android:theme="@style/SpinnerStyle" />
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>