<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="5dp">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp">

        <ImageView
            android:id="@+id/iv_waterfall_lost_pic"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_waterfall_title_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="6dp"
            android:textColor="#666666"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/iv_waterfall_lost_pic" />

        <ImageView
            android:id="@+id/iv_waterfall_thing"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/lf_type"
            app:layout_constraintLeft_toLeftOf="@+id/tv_waterfall_title_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_waterfall_title_content" />

        <TextView
            android:id="@+id/tv_waterfall_thing_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textColor="#999999"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_waterfall_thing"
            app:layout_constraintLeft_toRightOf="@+id/iv_waterfall_thing"
            app:layout_constraintTop_toTopOf="@+id/iv_waterfall_thing" />

        <ImageView
            android:id="@+id/iv_waterfall_time"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/lf_time"
            app:layout_constraintLeft_toLeftOf="@+id/iv_waterfall_thing"
            app:layout_constraintTop_toBottomOf="@+id/iv_waterfall_thing" />

        <TextView
            android:id="@+id/tv_waterfall_time_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textColor="#999999"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_waterfall_time"
            app:layout_constraintLeft_toRightOf="@+id/iv_waterfall_time"
            app:layout_constraintTop_toTopOf="@+id/iv_waterfall_time" />

        <ImageView
            android:id="@+id/iv_waterfall_location"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/lf_place"
            app:layout_constraintLeft_toLeftOf="@+id/iv_waterfall_time"
            app:layout_constraintTop_toBottomOf="@+id/iv_waterfall_time" />

        <TextView
            android:id="@+id/tv_waterfall_location_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textColor="#999999"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_waterfall_location"
            app:layout_constraintLeft_toRightOf="@+id/iv_waterfall_location"
            app:layout_constraintTop_toTopOf="@+id/iv_waterfall_location" />


        <ImageView
            android:id="@+id/recapture"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/lf2_recapture"
            app:layout_constraintLeft_toLeftOf="@+id/iv_waterfall_location"
            app:layout_constraintTop_toBottomOf="@+id/iv_waterfall_location" />

        <TextView
            android:id="@+id/recapture_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textColor="#999999"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/recapture"
            app:layout_constraintLeft_toRightOf="@+id/recapture"
            app:layout_constraintTop_toTopOf="@+id/recapture" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>